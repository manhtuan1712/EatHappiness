<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/bosuutap_tab_layout"
        app:tabSelectedTextColor="#FFF"
        app:tabTextColor="#FFF"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Small.Inverse"
        android:background="@color/tab_background_unselected"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_bosuutap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>