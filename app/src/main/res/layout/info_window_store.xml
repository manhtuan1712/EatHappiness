<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="7dp"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_detail"
        android:padding="5dp">
    <ImageView
        android:layout_width="@dimen/info_window_size"
        android:layout_height="@dimen/info_window_size"
        android:id="@+id/img_info_store"
        android:src="@drawable/store_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_bottom_newfooter">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên quán"
                android:id="@+id/tv_name_info_store"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="#ccc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@array/data_store_address"
                android:id="@+id/tv_address_info_store"
                android:textColor="#ccc" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>