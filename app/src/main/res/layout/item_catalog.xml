<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:background="#fff"
    android:paddingBottom="@dimen/item_catalog_padding_top"
    android:paddingTop="@dimen/item_catalog_padding_top">

    <ImageView
        android:layout_width="@dimen/item_catalog_width"
        android:layout_height="@dimen/item_catalog_height"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding"
        android:src="@drawable/catalog_1"
        android:id="@+id/img_catalog"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding"
        android:layout_weight="1"
        android:text="TextView"
        android:id="@+id/tv_name"
        android:textColor="@android:color/black"
        />

</LinearLayout>